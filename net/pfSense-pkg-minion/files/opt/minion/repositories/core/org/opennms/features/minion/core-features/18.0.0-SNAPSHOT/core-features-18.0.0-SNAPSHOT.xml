<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features name="minion-core-features" xmlns="http://karaf.apache.org/xmlns/features/v1.2.0">

    <!-- Apache ActiveMQ features -->
    <repository>mvn:org.apache.activemq/activemq-karaf/5.10.0/xml/features</repository>

    <!-- Apache Camel features -->
    <repository>mvn:org.apache.camel.karaf/apache-camel/2.14.1/xml/features</repository>

    <feature name="minion-core" description="Minion :: Core" version="18.0.0-SNAPSHOT">
        <feature>camel-core</feature>
        <feature>camel-blueprint</feature>
        <feature>camel-jaxb</feature>

        <!-- Needed by activemq-camel -->
        <bundle>mvn:javax.annotation/javax.annotation-api/1.2</bundle>
        <feature>activemq-camel</feature>

        <bundle>mvn:org.opennms.features.minion/core-api/18.0.0-SNAPSHOT</bundle>
        <bundle>mvn:org.opennms.features.minion/core-impl/18.0.0-SNAPSHOT</bundle>
    </feature>

    <feature name="minion-shell" description="Minion :: Shell" version="18.0.0-SNAPSHOT">
        <feature>minion-core</feature>
        <bundle>mvn:org.opennms.features.minion/shell/18.0.0-SNAPSHOT</bundle>
    </feature>
</features>
